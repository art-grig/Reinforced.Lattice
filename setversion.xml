<Project ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003" DefaultTargets="Both">
	<Import Project="C:\Program Files (x86)\MSBuild\MSBuildCommunityTasks\MSBuild.Community.Tasks.Targets" />
	<PropertyGroup>
		<ProjectName />
		<Version />
		<Title />
	</PropertyGroup>
	<Target Name="UpdateVersion">
		<MSBuild.Community.Tasks.AssemblyInfo CodeLanguage="CS" OutputFile="$(ProjectName)\Properties\AssemblyInfo.cs" AssemblyVersion="$(Version)" AssemblyTitle="$(Title)" />
	</Target>
	<Target Name="UpdateNuspec">
		<Copy SourceFiles="nuspecs\$(ProjectName).nuspec" DestinationFiles="build\$(ProjectName).nuspec" />
		<MSBuild.Community.Tasks.FileUpdate Files="build\$(ProjectName).nuspec" Regex="##Version##" ReplacementText="$(Version)" />
	</Target>
	<Target Name="Both">
		<CallTarget Targets="UpdateVersion; UpdateNuspec" />
		<CallTarget />
	</Target>
</Project>